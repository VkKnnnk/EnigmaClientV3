<Window x:Class="EnigmaClientV3.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None"
        xmlns:vm="clr-namespace:EnigmaClientV3.View_Model"
        ShowInTaskbar="False" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="768" Width="1366">
    <Window.DataContext>
        <vm:MainWindowVM/>
    </Window.DataContext>
    <Window.Background>
        <ImageBrush ImageSource="/Resources/Images/AppDesign/main_background.tif"/>
    </Window.Background>
    <Grid>
        <ContentPresenter Grid.Column="0" Grid.ColumnSpan="2" Content="{Binding CurrentPage}"/>
        <Grid Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" Width="50" Height="50" />
    </Grid>
</Window>
